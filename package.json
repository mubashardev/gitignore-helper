{
    "name": "gitignore-helper",
    "displayName": "Gitignore Helper",
    "publisher": "mubashardev",
    "icon": "icon.png",
    "license": "LICENSE",
    "repository": {
        "type": "git",
        "url": "https://github.com/mubashardev/gitignore-helper"
    },
    "description": "Essential helper tools for managing .gitignore files",
    "version": "0.1.4",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "Other"
    ],
    "main": "./out/extension.js",
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.addToGitignore",
                "title": "Add to .gitignore"
            },
            {
                "command": "extension.removeFromGitignore",
                "title": "Remove from .gitignore"
            },
            {
                "command": "extension.generateGitignore",
                "title": "Generate .gitignore..."
            },
            {
                "command": "extension.cleanupGitignore",
                "title": "Clean & Sort .gitignore"
            },
            {
                "command": "extension.checkIgnore",
                "title": "Check why file is ignored"
            },
            {
                "command": "extension.addToGlobalGitignore",
                "title": "Add to Global .gitignore"
            }
        ],
        "submenus": [
            {
                "id": "gitignore-helper.submenu",
                "label": "Gitignore Helper"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "submenu": "gitignore-helper.submenu",
                    "group": "navigation@1",
                    "when": "resourceScheme == file"
                }
            ],
            "gitignore-helper.submenu": [
                {
                    "command": "extension.addToGitignore",
                    "group": "1_modification@1",
                    "when": "!config.gitignoreHelper.onlyInGitProjects || gitOpenRepositoryCount > 0"
                },
                {
                    "command": "extension.removeFromGitignore",
                    "group": "1_modification@2",
                    "when": "!config.gitignoreHelper.onlyInGitProjects || gitOpenRepositoryCount > 0"
                },
                {
                    "command": "extension.checkIgnore",
                    "group": "2_info@1"
                },
                {
                    "command": "extension.addToGlobalGitignore",
                    "group": "3_global@1"
                }
            ],
            "editor/title": [
                {
                    "command": "extension.generateGitignore",
                    "group": "navigation",
                    "when": "resourceFilename == .gitignore"
                },
                {
                    "command": "extension.cleanupGitignore",
                    "group": "navigation",
                    "when": "resourceFilename == .gitignore"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Gitignore Helper",
            "properties": {
                "gitignoreHelper.onlyInGitProjects": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show 'Add to .gitignore' only in Git projects"
                },
                "gitignoreHelper.enableAutocomplete": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable autocomplete suggestions for files and folders in .gitignore"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && node scripts/generate-integrity.js",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "version": "npm run compile && git add integrity.json"
    },
    "devDependencies": {
        "@types/vscode": "^1.90.0",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "20.2.5",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "eslint": "^8.41.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "typescript": "^5.1.3",
        "@vscode/test-electron": "^2.3.2"
    }
}